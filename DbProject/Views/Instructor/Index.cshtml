<h2>Add new instructor</h2>
<form action="Create" method="post">
    <table>
        <tr>
            <td>
                <h4>
                    Teacher Id:
                </h4>
                <input type="text" name="id" />
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    Name:
                </h4>
                <input type="text" name="name" />
            </td>
        </tr>
        <tr>
            <td>
                <h4>
                    Department:
                </h4>
                <input type="text" name="department" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Submit" />
            </td>
        </tr>
    </table>
</form>